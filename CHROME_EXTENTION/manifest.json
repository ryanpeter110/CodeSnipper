{
    "name": "Code Snipper",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["dependancies/cropper.min.css"],
        "js": ["dependancies/cropper.min.js","content.js"]
      }
    ],
    "browser_action": {
      "default_title": "Code Snipper",
      "default_popup": "popup.html",
      "default_icon": {
        "16": "/icons/codeSnipper16.png",
        "32": "/icons/codeSnipper32.png",
        "128": "/icons/codeSnipper128.png"
      }
    },

    "permissions": [    
      "activeTab",
      "tabs" ,
      "<all_urls>"],

    "icons": {
        "16": "/icons/codeSnipper16.png",
        "32": "/icons/codeSnipper32.png",
        "128": "/icons/codeSnipper128.png"
      }
  }